{
  "extends": "stylelint-config-standard",
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "function",
          "if",
          "each",
          "include",
          "mixin",
          "tailwind",
          "extend"
        ]
      }
    ],
    "font-family-name-quotes": "always-where-required"
  },
  "ignoreFiles": ["dist/*.css"]
}
